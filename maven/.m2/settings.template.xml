<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
   https://maven.apache.org/xsd/settings-1.0.0.xsd">

	<interactiveMode />
	<usePluginRegistry />
	<offline />
	<pluginGroups />

	<mirrors>
		<mirror>
			<id>nexus</id>
			<mirrorOf>*</mirrorOf>
			<url>http://devserver.leonardo.local:9081/repository/maven-public/</url>
		</mirror>
	</mirrors>

	<servers>
		<server>
			<id>nexus</id>
			<username>admin</username>
			<password>${NEXUS_PASSWORD}</password>
		</server>
		<server>
			<id>nexus.releases</id>
			<username>admin</username>
			<password>${NEXUS_PASSWORD}</password>
		</server>
		<server>
			<id>nexus.snapshots</id>
			<username>admin</username>
			<password>${NEXUS_PASSWORD}</password>
		</server>
	</servers>

	<proxies />

	<profiles>
		<profile>
			<id>inject-nsis-home</id>
			<properties>
				<nsis.home>C:/Program Files (x86)/NSIS</nsis.home>
			</properties>
		</profile>
		<profile>
			<id>signing</id>
			<properties>
				<signing.container>p11#383b9a46a23303f0</signing.container>
				<signing.password>${SIGNING_PASSWORD}</signing.password>
			</properties>
		</profile>
		<profile>
			<id>leonardo</id>
			<repositories>
				<repository>
					<id>nexus.releases</id>
					<name>Managed Internal Repository</name>
					<url>http://devserver.leonardo.local:9081/repository/maven-releases/</url>
					<releases>
						<enabled>true</enabled>
						<updatePolicy>always</updatePolicy>
					</releases>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
				</repository>
				<repository>
					<id>nexus.snapshots</id>
					<name>Managed Snapshots Repository</name>
					<url>http://devserver.leonardo.local:9081/repository/maven-snapshots/</url>
					<releases>
						<enabled>false</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
						<updatePolicy>always</updatePolicy>
					</snapshots>
				</repository>
				<repository>
					<id>nexus</id>
					<name>Managed Internal Repository</name>
					<url>http://devserver.leonardo.local:9081/repository/maven-public/</url>
					<releases><enabled>true</enabled></releases>
					<snapshots><enabled>true</enabled></snapshots>
				</repository>
			</repositories>
		</profile>
	</profiles>

	<activeProfiles>
		<activeProfile>inject-nsis-home</activeProfile>
		<activeProfile>leonardo</activeProfile>
		<activeProfile>signing</activeProfile>
	</activeProfiles>

</settings>