#!/bin/bash

export EDITOR='vim'
export PS1="\[\033[38;5;10m\]\u@\h\[$(tput sgr0)\]\[\033[38;5;15m\] \[$(tput sgr0)\]\[\033[38;5;14m\]\w\[$(tput sgr0)\]\[\033[38;5;15m\] \[$(tput sgr0)\]\[\033[38;5;11m\]\\$\[$(tput sgr0)\]\[\033[38;5;15m\] \[$(tput sgr0)\]"

alias .1='cd ..'
alias .2='.1;.1'
alias .3='.2;.1'
alias .4='.3;.1'
alias .5='.4;.1'
alias .du='du -hsx * | sort -rh | head -10'
alias .s='cd ${HOME}/.ssh'
alias dc='docker-compose'
alias dps='docker ps'
alias dt='cd ${HOME}/Desktop'
alias e='exit'
alias eak='vi ${HOME}/.ssh/authorized_keys'
alias eh='vi ${HOME}/.bash_history'
alias ekh='vi ${HOME}/.ssh/known_hosts'
alias ep='vi ${HOME}/.bashrc;rp'
alias ev='vi .env'
alias gdc='function _gdc() {(cd ${DOCKER_COMPOSE_DIR} && docker-compose "${@}")};_gdc'
alias l='clear'
alias ll='ls -lta'
alias m='make'
alias mc='make clean'
alias rp='clear;source ${HOME}/.bashrc'
alias rr='rm -rf'
alias sconf='vi ${HOME}/.ssh/config'
alias vdc='vi docker-compose.yml'
alias vi='vim'
