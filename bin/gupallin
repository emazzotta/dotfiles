#!/bin/bash

root_dir="$(pwd)"
test "${1}" && root_dir="${1}"

echo "Checking ${root_dir} for git updates..."
find "${root_dir}" -mindepth 1 -maxdepth 3 -type d -or -type l | while read dir; do
    if [ -d "${dir}/.git" ]; then
        echo "Updating ${dir}"
        git -C "${dir}" checkout master
        git -C "${dir}" pull --rebase
        git -C "${dir}" checkout -
        git -C "${dir}" pull --rebase
    fi
done
