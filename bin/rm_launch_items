#!/bin/bash

DIRS=(
  "/Library/LaunchAgents"
  "/Library/LaunchDaemons"
)

PREFIXES=("com.microsoft" "com.adobe" "com.google" "com.spotify")

for dir in "${DIRS[@]}"; do
  if [[ -d "$dir" ]]; then
    for prefix in "${PREFIXES[@]}"; do
      matches=("$dir"/"$prefix"*.plist)
      for file in "${matches[@]}"; do
        if [[ -e "$file" ]]; then
          echo "üóëÔ∏è  Removing: $file"
          sudo rm -v "$file"
        fi
      done
    done
  fi
done

echo "‚úÖ Done."

