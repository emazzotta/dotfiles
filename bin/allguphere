#!/bin/bash

find $(pwd) -maxdepth 3 -mindepth 1 -type d | while read dir; do
    if [ -d "${dir}/.git" ]; then
        echo "Updating ${dir}"
        git -C "${dir}" checkout master
        git -C "${dir}" pull --rebase
        git -C "${dir}" checkout -
        git -C "${dir}" pull --rebase
    fi
done
