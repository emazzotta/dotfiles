#!/bin/bash

if test "${1}"; then
read -d '' result << EOF 
<script async src="${1}"
    integrity="sha384-$(curl -fSsL "${1}" | openssl dgst -sha384 -binary | openssl base64 -A)"
    crossorigin="anonymous"></script>
EOF
    print_and_copy "${result}"
else
    echo "usage: `basename ${0}` <file-url>"
fi
