#!/bin/bash

PATTERNS=(
  "AdobeIPCBroker"
  "Adobe Desktop Service"
  "Creative Cloud Helper"
  "Core Sync"
  "ACCFinderSync"
  "Adobe Crash Processor"
  "CCXProcess"
)

for pattern in "${PATTERNS[@]}"; do
  pids=$(pgrep -f "$pattern")
  if [[ -n "$pids" ]]; then
    echo "ðŸ”ª Killing processes matching: $pattern"
    echo "$pids" | xargs kill -9
  fi
done

echo "âœ… Done killing Adobe-related processes."

