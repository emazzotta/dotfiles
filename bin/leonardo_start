#!/bin/bash
set -euo pipefail

source leonardo_account

STATUS_HOST="updates.leonardo.local"

is_network_up() {
    [ "$(host-resolver "$STATUS_HOST" --timeout "$1" 2>/dev/null)" != "127.0.0.1" ]
}

if is_network_up 250; then
    leonardo_vpn_toggle --disable
    if is_network_up 250; then
      echo "Leonardo network is reachable."
      leonardo_drive
    fi
    exit 0
fi

leonardo_vpn_toggle --enable

echo "Checking if connection is established..."
DEADLINE=$((SECONDS + 15))
while [ $SECONDS -lt $DEADLINE ]; do
    if is_network_up 100; then
        echo "Leonardo network is reachable."
        leonardo_drive
        exit 0
    fi
done

echo "$STATUS_HOST is not reachable."
exit 1
