#!/bin/bash

if [[ $(whoami) == "root" ]]; then
    mac=$(openssl rand -hex 6 | sed 's/\(..\)/\1:/g; s/.$//')
    ifconfig en0 ether ${mac}
    ifconfig en0 ether ${mac}
    ifconfig en0 down
    ifconfig en0 up
    echo "Your new physical address is ${mac}"
else
    echo "`basename ${0}` must be executed as root!"
fi
