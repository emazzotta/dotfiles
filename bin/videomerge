#!/bin/bash

set -e

source "$(dirname "$0")/shelllog.sh"

log "Starting video merge script..."

show_help() {
    log "Usage: $(basename "$0") <video files...>"
    log "Concatenate multiple video files into a single MP4 file named 'merged.mp4'."
    log
    log "Example: $(basename "$0") video1.mp4 video2.mp4"
}

if [ $# -eq 0 ] || [[ "$1" == "-h" ]]; then
    show_help
    exit 1
fi

TEMP_FILE="$(mktemp)"
for video in "$@"; do
    if [ ! -f "$video" ]; then
        error "File '$video' not found."
        rm -f "$TEMP_FILE"
        exit 1
    fi
    echo "file '$(pwd -P)/$video'" >> "$TEMP_FILE"
done

ffmpeg -f concat -safe 0 -i "$TEMP_FILE" -c copy merged.mp4
success "Videos have been merged into 'merged.mp4'."

rm -f "$TEMP_FILE"

