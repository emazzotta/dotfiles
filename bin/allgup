#!/bin/bash

DIRS_TO_CHECK=$(find "${WDIR}" -maxdepth 2 -type d)
for dir in ${DIRS_TO_CHECK}; do
    if [ -d "${dir}/.git" ]; then
        echo "Updating ${dir}"
        git -C "${dir}" checkout master
        git -C "${dir}" pull --rebase
        git -C "${dir}" checkout -
        git -C "${dir}" pull --rebase
    fi
done
