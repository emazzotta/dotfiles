#!/bin/bash

FILE_REGEX=""
PATTERN=""
FILE_GIVEN=false
SEARCH_PATH="."

# Parse the command line arguments
while [[ "$#" -gt 0 ]]; do
    case "$1" in
        -r|--file-regex)
            FILE_REGEX="$2"
            FILE_GIVEN=true
            shift
            ;;
        -p|--path)
            SEARCH_PATH="$2"
            shift
            ;;
        *)
            if [ -z "$PATTERN" ]; then
                PATTERN="$1"
            else
                PATTERN="$PATTERN $1"
            fi
            ;;
    esac
    shift
done

# Check the provided arguments and execute the appropriate command
if [ "$FILE_GIVEN" = true ] && [ ! -z "$PATTERN" ]; then
    ag --hidden "$PATTERN" -G "$FILE_REGEX" "$SEARCH_PATH"
elif [ ! -z "$PATTERN" ]; then
    ag --hidden "$PATTERN" "$SEARCH_PATH"
else
    echo "usage: $(basename "${0}") [-r <filename regex>] [-p <path>] <pattern>"
fi

