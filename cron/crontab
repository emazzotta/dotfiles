0 20 * * * bash -lci "[ ${PAYABLES} -gt 0 ] && osascript -e 'display notification \"You have '${PAYABLES}' unpaid $([ ${PAYABLES} -gt 1 ] && echo "payables" || echo "payable")\" with title \"Payables\"'"
